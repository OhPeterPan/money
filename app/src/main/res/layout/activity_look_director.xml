<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_circle_white"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search" />

            <TextView
                android:id="@+id/etDirectorSearch"
                style="@style/editStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:background="@null"
                android:hint="搜索疾病、医生或医院"
                android:imeOptions="actionSearch"
                android:includeFontPadding="false"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="#616161"
                android:textSize="13sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLookDocMedicine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/lookDocDrawablePadding"
            android:drawableTop="@drawable/ic_medicine_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/lookDocPaddingBottom"
            android:paddingTop="@dimen/lookDocPaddingTop"
            android:text="内科"
            android:textColor="@color/lookDocTextColor"
            android:textSize="@dimen/lookDocTextSize" />

        <TextView
            android:id="@+id/tvLookDocSurgery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/lookDocDrawablePadding"
            android:drawableTop="@drawable/ic_surgery_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/lookDocPaddingBottom"
            android:paddingTop="@dimen/lookDocPaddingTop"
            android:text="外科"
            android:textColor="@color/lookDocTextColor"
            android:textSize="@dimen/lookDocTextSize" />

        <TextView
            android:id="@+id/tvLookDocGyn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/lookDocDrawablePadding"
            android:drawableTop="@drawable/ic_gyn_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/lookDocPaddingBottom"
            android:paddingTop="@dimen/lookDocPaddingTop"
            android:text="妇产科"
            android:textColor="@color/lookDocTextColor"
            android:textSize="@dimen/lookDocTextSize" />

        <TextView
            android:id="@+id/tvLookDocChild"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/lookDocDrawablePadding"
            android:drawableTop="@drawable/ic_child_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/lookDocPaddingBottom"
            android:paddingTop="@dimen/lookDocPaddingTop"
            android:text="儿科"
            android:textColor="@color/lookDocTextColor"
            android:textSize="@dimen/lookDocTextSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/lookDocPaddingTop"
        android:visibility="gone"
        android:layout_marginRight="@dimen/lookDocPaddingBottom"
        android:background="@color/eee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLookDocHerbalist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/lookDocDrawablePadding"
            android:drawableTop="@drawable/ic_herbalist_doctor_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/lookDocPaddingBottom"
            android:paddingTop="@dimen/lookDocPaddingBottom"
            android:text="中医科"
            android:textColor="@color/lookDocTextColor"
            android:textSize="@dimen/lookDocTextSize" />

        <TextView
            android:id="@+id/tvLookDocOrthopaedics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/lookDocDrawablePadding"
            android:drawableTop="@drawable/ic_orthopaedics_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/lookDocPaddingBottom"
            android:paddingTop="@dimen/lookDocPaddingTop"
            android:text="骨科"
            android:textColor="@color/lookDocTextColor"
            android:textSize="@dimen/lookDocTextSize" />

        <TextView
            android:id="@+id/tvLookDocDepartment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/lookDocDrawablePadding"
            android:drawableTop="@drawable/ic_respiratory_department_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/lookDocPaddingBottom"
            android:paddingTop="@dimen/lookDocPaddingTop"
            android:text="呼吸科"
            android:textColor="@color/lookDocTextColor"
            android:textSize="@dimen/lookDocTextSize" />

        <TextView
            android:id="@+id/tvLookDocExtra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/lookDocDrawablePadding"
            android:drawableTop="@drawable/ic_extra_pic"
            android:gravity="center"
            android:paddingBottom="@dimen/lookDocPaddingBottom"
            android:paddingTop="@dimen/lookDocPaddingTop"
            android:text="其它"
            android:textColor="@color/lookDocTextColor"
            android:textSize="@dimen/lookDocTextSize" />
    </LinearLayout>
</LinearLayout>