<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/firstItemElevation"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAdapterOrderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约医生"
                android:textColor="#a5a5a5"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/ivAdapterOrderState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_order_doc_pic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAdapterOrderState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态"
                android:textColor="@color/darkTextYellow"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAdapterGoPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_yellow"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="去 支 付"
                    android:textColor="#ff8839"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvAdapterDelOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/shape_gray_rect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="删除订单"
                    android:textColor="#7d7f7e"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAdapterOrderMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="需支付金额100元"
                android:textColor="#a5a5a5"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

