<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="horizontal"
    android:paddingLeft="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civAdapterMessagePersonPic"
        android:layout_width="@dimen/userPicture"
        android:layout_height="@dimen/userPicture"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_doc_head" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAdapterMessagePersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户"
            android:textColor="#848481"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvAdapterMessagePersonContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:lineSpacingExtra="2dp"
            android:padding="6dp"
            android:text="nasuiohdfsdfasjkdhflkasdhfahsdklfklasdfkaskdlhfgjkasdfgkasjdhdkghkasjhgkhasdhaskhgaskhghasjhgkashghkashgashkghasjkghah"
            android:textColor="#848481"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>