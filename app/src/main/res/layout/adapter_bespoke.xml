<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/firstItemElevation"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_brspoke_be_hospitalized"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="到院治疗"
                android:textColor="@color/standardTextColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvAdapterBespokeMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@drawable/ic_bespoke_money_pic"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="100 元"
                android:textColor="@color/darkTextYellow"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvAdapterBespokeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2018-01-01"
                android:textColor="#c9c9c9"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/eee" />

        <TextView
            android:id="@+id/tvAdapterBespokeDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="问诊医生：xxx"
            android:textColor="@color/standardTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvAdapterBespokeHos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="问诊医院：xxx"
            android:textColor="@color/standardTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvAdapterBespokePersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="患者姓名：xxx"
            android:textColor="@color/standardTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvAdapterBespokePersonDisease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="患者疾病：xxx"
            android:textColor="@color/standardTextColor"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>